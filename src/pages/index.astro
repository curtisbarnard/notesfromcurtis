---
import Layout from '../layouts/Layout.astro';
import OneImage from '../components/OneImage.astro';
import type { ImageMetadata } from 'astro';

const allPostsModules = import.meta.glob<{ frontmatter: any; url: string }>('../pages/posts/*.mdx');
const allPosts = await Promise.all(
  Object.values(allPostsModules).map((module) => module())
);
const sortedPosts = allPosts.sort((a, b) => {
  const aDate = new Date(a.frontmatter.pubDate).valueOf();
  const bDate = new Date(b.frontmatter.pubDate).valueOf();
  return bDate - aDate;
});
const latestPost = sortedPosts[0];

const imagesModules = import.meta.glob<{ default: ImageMetadata }>('../assets/images/*.webp', { eager: true });
const imageMap = Object.fromEntries(
  Object.entries(imagesModules).map(([path, img]) => {
    const filename = path.split('/').pop() || '';
    return [filename, img.default];
  })
) as Record<string, ImageMetadata>;
// Try to match with or without .webp extension
const mainImage = latestPost.frontmatter.mainImage;
const img = imageMap[mainImage] || imageMap[mainImage + '.webp'];

const title = 'Notes from Curtis...';
---

<Layout title={title} />
<main>
  <a href={latestPost.url}>
    <h2>{latestPost.frontmatter.title}</h2>
    {img && <OneImage img={img} altText='' />}
    <p>{latestPost.frontmatter.description}</p>
  </a>
</main>

<style>
  main {
    margin: 0 auto;
    width: 100%;
    max-width: 65ch;
  }

  ul {
    padding: 0;
  }

  li {
    list-style: none;
    margin: 2rem 0;
  }

  h2 {
    display: inline;
    margin: 0 0 0.2rem 0;
  }

  li p {
    margin: 0;
    font-style: italic;
  }

  a {
    text-decoration: none;
  }

  a,
  a:visited {
    color: hsl(0, 0%, 0%);
  }

  a:hover {
    color: rgb(255, 161, 61);
  }

  .pubDate {
    font-size: 0.8rem;
    font-style: italic;
  }
</style>
